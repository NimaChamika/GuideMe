<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nima.guideme.Adddistrict">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/pnamevalue"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/dnamevalue"
        android:layout_alignStart="@+id/dnamevalue"
        android:layout_alignRight="@+id/dnamevalue"
        android:layout_alignEnd="@+id/dnamevalue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/addbutton"
        android:onClick="adduser"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/pnamevalue"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Page"
        android:id="@+id/next"
        android:layout_alignTop="@+id/addplace"
        android:layout_toRightOf="@+id/addbutton"
        android:layout_toEndOf="@+id/addbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/addplace"
        android:layout_below="@+id/addbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:onClick="viewdetails" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dnamevalue"
        android:layout_below="@+id/pnamevalue"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/next"
        android:layout_alignEnd="@+id/next"
        android:layout_alignLeft="@+id/addplace"
        android:layout_alignStart="@+id/addplace" />

</RelativeLayout>
