<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4092F0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nima.guideme.Addplace">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#4092F0"
            android:stretchColumns="*"
            android:shrinkColumns="*">


            <TableRow
                android:id="@+id/tableRow13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView android:id="@+id/image3"
                    android:layout_width="100dp"  android:layout_height="300dp"
                    />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp">



                <TextView
                    android:id="@+id/type"
                    android:layout_weight="7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:ems="5"
                    android:text="TYPE"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_span="2" />




            </TableRow>


            <TableRow
                android:id="@+id/tableRow12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">



                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:entries="@array/type"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_span="2" />



            </TableRow>


            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <TextView
                    android:id="@+id/province"
                    android:layout_weight="7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:ems="5"
                    android:text="PROVINCE"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_span="2" />




            </TableRow>


            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">



                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:entries="@array/province"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_span="2" />



            </TableRow>


            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/d"
                    android:layout_weight="7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:ems="5"
                    android:text="DISTRICT"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_span="2" />



            </TableRow>

            <TableRow
                android:id="@+id/tableRow10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">


                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_span="2" />


            </TableRow>


            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/productID"
                    android:layout_weight="7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:ems="5"
                    android:text="NAME "
                    android:textAppearance="?android:attr/textAppearanceLarge" />



            </TableRow>



            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_column="0"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/provincevalue"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"

                    android:background="@drawable/edittext"

                    android:layout_span="2"
                    android:layout_marginRight="10dp" />



            </TableRow>



            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/district"
                    android:layout_weight="7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:ems="5"
                    android:text="ADDRESS"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_marginTop="10dp" />




            </TableRow>


            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_column="0"
                    android:layout_height="wrap_content"
                    android:id="@+id/districtvalue"
                    android:layout_below="@+id/provincevalue"
                    android:layout_alignLeft="@+id/provincevalue"
                    android:layout_alignStart="@+id/provincevalue"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:singleLine="false"
                    android:lines="2"
                    android:layout_alignRight="@+id/provincevalue"
                    android:layout_alignEnd="@+id/provincevalue"
                    android:layout_span="2"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />




            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/place"
                    android:layout_weight="7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:ems="5"
                    android:text="PHONE"
                    android:textAppearance="?android:attr/textAppearanceLarge" />






            </TableRow>


            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:id="@+id/placevalue"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/districtvalue"
                    android:layout_alignStart="@+id/districtvalue"
                    android:layout_alignRight="@+id/districtvalue"
                    android:layout_alignEnd="@+id/districtvalue"
                    android:inputType="phone"
                    android:background="@drawable/edittext"
                    android:maxLength="10"
                    android:layout_span="2"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />

            </TableRow>








            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:id="@+id/addplace"
                android:onClick="addplace"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="32dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:id="@+id/viewbutton"
                android:onClick="viewDetails"
                android:layout_alignTop="@+id/addplace"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="view2"
                android:id="@+id/view2"
                android:onClick="onview2"
                android:layout_alignTop="@+id/viewbutton"
                android:layout_centerHorizontal="true" />

        </TableLayout>
    </ScrollView>











</RelativeLayout>
